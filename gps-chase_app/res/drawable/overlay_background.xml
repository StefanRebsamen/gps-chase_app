<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="2dp"
                android:top="1dp" />			           
            <solid android:color="@color/gray_shadow"/>		
        </shape>
    </item>

    <!-- White Top color -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/gray_very_light"/>
        </shape>
    </item>

</layer-list>